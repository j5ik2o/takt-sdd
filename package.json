{
  "name": "takt-sdd",
  "version": "0.5.0",
  "private": true,
  "description": "Spec-Driven Development workflow for takt",
  "devDependencies": {
    "takt": "^0.20.1"
  },
  "scripts": {
    "sdd": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w sdd -t",
    "sdd:requirements": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w sdd-requirements -t",
    "sdd:validate-gap": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w sdd-validate-gap -t",
    "sdd:design": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w sdd-design -t",
    "sdd:validate-design": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w sdd-validate-design -t",
    "sdd:tasks": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w sdd-tasks -t",
    "sdd:impl": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w sdd-impl -t",
    "sdd:validate-impl": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w sdd-validate-impl -t",
    "steering": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w steering -t",
    "steering:custom": "scripts/takt.sh --pipeline --skip-git --create-worktree no -w steering-custom -t"
  }
}
